<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="100dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="right"
        android:id="@+id/textViewHeaderName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="20sp"
        android:id="@+id/textViewHeaderNickName"
        android:layout_gravity="right" />

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_password_"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_span="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_password_"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/textViewHeaderPassword"
            android:gravity="center_horizontal"
            android:layout_span="1" />

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButtonPassword"
            android:background="@drawable/ic_update_password"
            android:layout_weight="0.2"
            android:layout_span="1" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/trackMyLocation"
            android:textSize="@dimen/activity_horizontal_margin"
            android:id="@+id/trackMyLocation"
            android:layout_gravity="center_vertical" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton_navigationview"
            android:layout_gravity="right"
            android:checked="true" />
    </TableRow>

</LinearLayout>